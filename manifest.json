{
  "manifest_version": 3,
  "name": "Simple Add Headers",
  "version": "1.0.0",
  "description": "Add custom headers per-domain. No fuss, no mess.",
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
	  "64": "icons/icon_64.png",
	  "128": "icons/icon_128.png"
    }
  },
  "declarative_net_request": {
    "rule_resources": []
  }
}
